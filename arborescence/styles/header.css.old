.headerInclude .container {
    width: 100%;
    height: 25px;
}
.headerInclude .container>div:nth-child(1n+0) {
    width: 25%;
    height: 25px;
    float: left;
} 
.headerInclude .container>div:nth-child(1) {
    background-color: #1DB250;
    transition: 1s;
}
.headerInclude .container>div:nth-child(2)  {
    background-color: #D4499A;
    transition: 1s;
}
.headerInclude .container>div:nth-child(3)  {
    background-color: #0B83C6;
    transition: 1s;
}
.headerInclude .container>div:nth-child(4)  {
    background-color: #EEB81D;
    transition: 1s;
}
.headerInclude .container>div:nth-child(1):hover {
    transform: scale(1.5);
    transition: 1s;
}
.headerInclude .container>div:nth-child(2):hover  {
    transform: scale(1.5);
    transition: 1s;
}
.headerInclude .container>div:nth-child(3):hover  {
    transform: scale(1.5);
    transition: 1s;
}
.headerInclude .container>div:nth-child(4):hover  {
    transform: scale(1.5);
    transition: 1s;
}
.headerInclude .container_2 {
    width: 100%;
    height: 90px;
    border-bottom: solid black 1px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.headerInclude img[src="../medias/logo.png"] {
    height: 60px;
    float: left;
    transition: 1s;
    margin-left: 2vw;
}
.headerInclude img[src="../medias/logo.png"]:hover {
    transform: scale(1.2);
    transition: 1s;
}
.headerInclude .container_2>h1 {
    font-size: 2.5rem;
}
.headerInclude .search_bar {
    background: black;
    height: 40px;
    width: 280px;
    border-radius: 20px;
    margin-right: 2vw;
}
.headerInclude img[src="../medias/loupe.svg"] {
    float: right;
    width: 30px;
    margin-top: 5px;
    margin-right: 10px;

}
